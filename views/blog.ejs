<!DOCTYPE html>
<html lang="en">
<head>
    <%- include(`./partials/head`) %>
    <title>Home page</title>
</head>
<body>
    <%- include(`./partials/scripts`) %>    
    
    <%- include(`./partials/navbar`) %>
    
    <div class="container mt-4">
       <h1><%=blog.title %></h1>
        <img src="<%=blog.coverImageURL %>" width="800px"/>
        <pre class="mt-4"><%=blog.body %></pre>
    </div>
    <div class="container mt-3">
        <img src="/images/default.png" width="50px">Blog by Daniya Khan
    </div>
    
    <div class="container mt-3">
        <h1>Comments (<%=comments.length%>)</h1>
        
        <form action="/blogs/comment/<%= blog._id %>" method="post">
           
            <div class="mb-3">
              <input type="content" class="form-control" name="content" placeholder="Share your thoughts here..">
            </div>
            <div class="container mt-2">
                <button class="btn btn-primary" type="submit">ADD</button>
            </div>
        </form>

        <div class="mt-3">
            <%comments.forEach(comment=>{%>
                
                <pre><%=comment.content%></pre>
            <%})%>
        </div>

        </div>


    
</body>
</html>